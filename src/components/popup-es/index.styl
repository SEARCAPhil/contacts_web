/**
 * Popup.css
 */
*[data-popup]
  position: fixed
  display: block
  width: 100%
  height: 100%
  top:0
  left: 0
  overflow-y: auto
  background: rgba(40,40,40,0.9)
  visibility:hidden
  margin:auto
  padding: 1em	
  opacity: 0
  z-index: 1
  border-width: initial
  border-style: solid
  border-color: transparent
  border-image: initial


*[data-popup][open]
	opacity: 1
	visibility: visible !important

*[data-popup="fade"]
	transition: visibility 0.2s, opacity 0.2s ease-in-out


*[data-popup] > .content:not([data-role="none"])
	position: absolute
	float: left
	width: 250px
	height:auto
	min-height: 300px
	background: #fff
	left:calc(50% - 125px)
	top:10vh
	margin-bottom: 5vh


*[data-popup] .popup-close-button
	float: right
	margin:5px

dialog > .content > a.popup-close-button
  position: absolute
  right: -10px
  top: -10px
  width: 30px
  height: 30px
  background: #fff
  border-radius: 50%
  text-align: center
  border: 3px solid #dc3545
  color: #dc3545
  padding-top: -15px !important
  overflow: hidden
  vertical-align: text-top